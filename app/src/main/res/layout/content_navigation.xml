<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:text="Hey Volunteers!"
        android:textColor="#FF4AA1CC"
        android:textSize="44sp" />

    <TextView
        android:id="@+id/infocntd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="173dp"
        android:gravity="center"
        android:text="Turing Fraternity is back with its annual tech symposium, and to make it successful (again), we need your help. You have been assigned tasks, and are expected to complete them within the given deadlines. Perform well, and you may be the one assigning tasks next year. Swipe right to get started!"
        android:textColor="#000000"
        android:textSize="28sp" />

</RelativeLayout>